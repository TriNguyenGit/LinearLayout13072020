<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

     <LinearLayout
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:weightSum="4"
          android:orientation="vertical"
          android:layout_height="0dp">

          <LinearLayout
              android:layout_weight="1"
              android:background="#DFDCDC"
              android:textStyle="bold"
              android:textSize="20sp"
              android:gravity="center"
              android:textColor="#000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:background="#63D128"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:background="#C17D7D"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:background="#5E4242"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
          </LinearLayout>
     </LinearLayout>

     <LinearLayout
         android:layout_weight="1"
         android:background="#BA4141"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:weightSum="4"
         android:orientation="horizontal">

          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#4A1C1C">
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#4A5477">
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#2C1F1F">
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#D5A2A2">
          </LinearLayout>
     </LinearLayout>
</LinearLayout>
